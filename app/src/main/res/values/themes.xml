<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Java_App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy_500</item>
        <item name="colorPrimaryVariant">@color/navy_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_200</item>
        <item name="colorSecondaryVariant">@color/orange_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:imageButtonStyle">@color/navy_500</item>
        <item name="android:textColor">@color/blackText</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:indeterminateTint">@color/blackText</item>
        <item name="android:seekBarStyle">@color/blackText</item>
    </style>

    <style name="Theme.Java_App.Inverted" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy_500</item>
        <item name="colorPrimaryVariant">@color/navy_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_200</item>
        <item name="colorSecondaryVariant">@color/orange_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:imageButtonStyle">@color/navy_500</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:indeterminateTint">@color/whiteText</item>
    </style>

    <style name="Theme.Java_App.Orange" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/blackText</item>
    </style>
    </resources>